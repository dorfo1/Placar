<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.time.TimesActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <android.support.design.widget.TextInputEditText
            android:id="@+id/times_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Time 1"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="@id/layout1"
        app:layout_constraintEnd_toEndOf="@id/layout1">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/times_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Time 2"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/times_btn_iniciar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:transitionName="transicao"
        android:textAllCaps="false"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/times_btn_cancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Novo Jogo"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/times_btn_iniciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</android.support.constraint.ConstraintLayout>